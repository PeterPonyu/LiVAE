
{
  "name": "frontend",
  "version": "0.1.0",
  "description": "LiVAE Frontend Interface - Single-cell Genomics Analysis Tool",
  "private": false,
  "author": "Zeyu Fu <fuzeyu09@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/PeterPonyu/LiVAE",
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterPonyu/LiVAE.git"
  },
  "keywords": [
    "single-cell",
    "genomics",
    "machine-learning",
    "bioinformatics",
    "nextjs",
    "typescript",
    "scgemma"
  ],
  "main": "start.js",
  "files": [
    "out/**/*",
    "start.js",
    "next.config.ts",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "build:static": "next build",
    "build:production": "npm run type-check && npm run lint:check && npm run build:static",
    "start": "next start",
    "start:production": "node start.js",
    "start:ts": "tsx start.ts",
    "start:dev": "tsx watch start.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "compile:start": "tsc start.ts --target es2020 --module commonjs --esModuleInterop --outDir .",
    "serve:static": "npx serve@latest out -s -p 3000",
    "serve:production": "npm run compile:start && node start.js",
    "clean": "rm -rf .next .turbo out start.js *.tsbuildinfo",
    "clean:full": "npm run clean && rm -rf node_modules",
    "deploy:prepare": "npm run clean && npm run build:production && npm run compile:start",
    "deploy:test": "npm run deploy:prepare && npm run serve:static",
    "postbuild": "echo 'âœ… Build completed successfully'",
    "prebuild": "npm run type-check",
    "health:check": "curl -f http://localhost:3000/api/health || echo 'Health check failed'"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.63.0",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  },
  "optionalDependencies": {
    "serve": "^14.2.4"
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "deployConfig": {
    "apiUrl": "http://127.0.0.1:8000",
    "port": 3000,
    "hostname": "localhost"
  }
}
